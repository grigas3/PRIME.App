<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TestFragment"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="10dp"
                android:textColor="#000000"
                android:text="@string/time_now">
            </TextView>

            <TextClock
                android:id="@+id/simpleDigitalClock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="10dp"/>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp">
        </Space>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="22sp"
            android:padding="10dp"
            android:textColor="#000000"
            android:text="@string/select_test">
        </TextView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp">
        </Space>

        <Button
            android:id="@+id/pronSup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="26dp"
            android:drawableStart="@drawable/ic_line_chart"
            android:gravity="center"
            android:paddingStart="30dp"
            android:paddingEnd="26dp"
            android:textColor="@color/white"
            android:background="@drawable/button_signin"
            android:text="@string/bradykinesiaTest" />

        <Button
            android:id="@+id/restingTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="26dp"
            android:drawableStart="@drawable/ic_line_chart"
            android:gravity="center"
            android:paddingStart="30dp"
            android:paddingEnd="26dp"
            android:textColor="@color/white"
            android:background="@drawable/button_signin"
            android:text="@string/restingTest" />

        <Button
            android:id="@+id/walkingTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="26dp"
            android:drawableStart="@drawable/ic_line_chart"
            android:gravity="center"
            android:paddingStart="30dp"
            android:paddingEnd="26dp"
            android:textColor="@color/white"
            android:background="@drawable/button_signin"
            android:text="@string/walkingTest" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>